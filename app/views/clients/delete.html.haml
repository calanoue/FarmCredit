- @page_title = "Delete Client: #{@client.name}"

= link_to "<< Back to List", {:action => 'list'}, :class => 'back-link'

%div(class="client delete")
  %h2 Delete Client
  = form_for(:client, :url => {:action => 'destroy', :id => @client.id}) do |f|
    %p Are you sure you want to permanently delete this client?
    %p(class="reference-name")= @client.name
    .form-buttons
      = submit_tag("Delete Client")
